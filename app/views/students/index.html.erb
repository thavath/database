<div class="container" style="margin-top: 50px;">
  
<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>
<br>
<div class="table-responsive">
<table class="table table-hover" style="text-align: center;">
  <thead style="background-color: #00004d; color: #FFF; font-size: 13px; text-align: center;">
    <tr>
      <th>English Name</th>
      <th>Japanese Name</th>
      <th>Khmer Name</th>
      <th>Nationality</th>
      <th>Place of Birth</th>
      <th>ID Card</th>
      <th>Education</th>
      <th>Date of Birth</th>
      <th>Age</th>
      <th>Sex</th>
      <th> Detail</th>
      <th> Update</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.namej %></td>
        <td><%= student.namek %></td>
        <td><%= student.nationality %></td>
        <td><%= student.place %></td>
        <td><%= student.idcard %></td>
        <td><%= student.education %></td>
        <td><%= student.dbirth %></td>
        <td><%= student.age %></td>
        <td><%= student.sex %></td>
        <td><%= link_to 'Show', student, class:'btn btn-xs btn-success' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:'btn btn-xs btn-primary' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
</div>